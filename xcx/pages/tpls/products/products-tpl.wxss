.products-box {
  margin: 10rpx 20rpx 20rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-shadow: 5rpx;
}

.products-item {
  display: flex;
  flex-direction: row;
  min-height: 200rpx;
  width: 99%;
  margin-right: 0;
  margin-bottom: 20rpx;
  background-color: rgba(0, 0, 150, 0.10);
  /* text-align: center; */
}

.products-item-top {
  display: flex;
  flex-direction: row;
  min-height: 120rpx;
  width: 98%;
  margin-right: 0;
  margin-bottom: 20rpx;
  background-color:  rgba(0, 140, 0, 0.10);
  /* text-align: center; */
}

.img-container {
  display: flex;
  width: 45%;
  height: 100%;
  margin-right: 10rpx;
}

.products-image {
  border: 1rpx ;
  width: 100%;
  height: 100%;
}

.two-container {
  display: flex;
  flex-direction: column;
  width: 55%;
  height: 100%;
}

.text-container {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  margin-right: 50rpx;
  /* margin-top:5rpx; */
  margin-bottom: 30rpx;
}

.products-item-title {
  font-size: 17px;
  font-weight: 200rpx;
  margin-bottom: 10rpx;
  text-align: center;
}

.products-item-date {
  text-align: center;
  font-size: 24rpx;
}

.bottom-container {
  display: flex;
  flex-flow: row;
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.bottom-container image {
  width: 50rpx;
  height: 50rpx;
  margin: auto 20rpx auto 10rpx;
}

.type {
  display: flex;
  border: 1px #333;
  font-size: 30rpx;
  justify-content: center;
  margin: 10rpx 10rpx auto auto;
  width: 80rpx;
  height: 40rpx;
  background-color: white;
}

.products-item-bottom .name {
  text-align: center justify;
  color: #333;
  font-size: 45rpx;
}
